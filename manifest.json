{
  "name": "TIGRIS",
  "description": "TIGRIS Band Assistant for Schedule and Notifications",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "TIGRIS.png",
    "32": "TIGRIS.png",
    "48": "TIGRIS.png",
    "128": "TIGRIS.png"
  },
  "action": {
    "default_title": "TIGRIS",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "tabs"]
}
